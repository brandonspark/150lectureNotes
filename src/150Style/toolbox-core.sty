% spec
\RequirePackage{framed}
\newrobustcmd{\spec}[4]{
    \begin{framed}
    \code{#1 : #2}\par
    \ifstrempty{#3}{}{\par REQUIRES: #3}
    \ifstrempty{#4}{}{\par ENSURES: #4}
    \end{framed}
}

